// Notes: compilerOptions.allowJs MUST be set to true too allow .d.ts file intellisense
{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "declaration": false,
        "removeComments": true,
        "outDir": "app/dist",
        "sourceMap": true,
        "target": "ES5",
        "lib": [
            "dom",
            "es2015",
            "es2015.core"
        ]
    },
    "exclude": [
        "app/dist",
        "node_modules"
    ],
    "files": [
        "typings/index.d.ts" 
    ]
}